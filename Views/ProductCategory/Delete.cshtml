@model MyAuthDemo.Models.ProductCategory
@{
    ViewBag.Title = "Delete Product Category";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="max-w-lg mx-auto mt-12 bg-white p-8 rounded-lg shadow border border-red-200">
    <h2 class="text-xl font-bold text-red-700 mb-4">Delete Product Category</h2>
    <p class="mb-6 text-gray-700">Are you sure you want to delete the category <b>@Model.Name</b>?</p>
    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="px-6 py-2 bg-red-600 text-white rounded hover:bg-red-700">Yes, Delete</button>
        <a asp-action="Index" class="ml-4 px-6 py-2 bg-gray-200 rounded hover:bg-gray-300 text-gray-800">Cancel</a>
    </form>
</div>
