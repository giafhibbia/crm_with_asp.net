@model MyAuthDemo.ViewModels.MachineViewModel
@{
    ViewBag.Title = "Add Machine";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<h1 class="text-2xl font-bold mb-4">Add Machine</h1>
<form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-4">

    <div>
        <label asp-for="CategoryId" class="block font-medium">Category</label>
        <select asp-for="CategoryId" asp-items="Model.CategoryOptions" class="form-select"></select>
        <span asp-validation-for="CategoryId" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="Name" class="block font-medium"></label>
        <input asp-for="Name" class="form-input" />
        <span asp-validation-for="Name" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="FullName" class="block font-medium"></label>
        <input asp-for="FullName" class="form-input" />
        <span asp-validation-for="FullName" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="Description" class="block font-medium"></label>
        <textarea asp-for="Description" class="form-textarea"></textarea>
    </div>

    <div>
        <label asp-for="Qty" class="block font-medium"></label>
        <input asp-for="Qty" type="number" min="1" class="form-input" />
        <span asp-validation-for="Qty" class="text-red-600"></span>
    </div>

    <div>
        <label asp-for="Condition" class="block font-medium"></label>
        <select asp-for="Condition" asp-items="Model.ConditionOptions" class="form-select"></select>
    </div>

    <div>
        <label asp-for="StatusType" class="block font-medium"></label>
        <select asp-for="StatusType" asp-items="Model.StatusTypeOptions" class="form-select"></select>
    </div>

    <div>
        <label asp-for="ImageFile" class="block font-medium">Image</label>
        <input asp-for="ImageFile" type="file" class="form-input" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="machine-img" style="max-height:120px;margin-top:10px;" />
        }
    </div>

    <button type="submit" class="bg-[#009434] text-white px-6 py-2 rounded hover:bg-[#007e2a]">Save</button>
    <a asp-action="Index" class="ml-4 text-gray-700">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
