@model MyAuthDemo.Models.User
@using System.Text.Json
@using System.Text.Json.Serialization

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1 class="text-[22px] font-bold mb-8 text-left flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
        <path d="M10 10a4 4 0 100-8 4 4 0 000 8z" />
        <path fill-rule="evenodd" d="M2 18a8 8 0 0116 0H2z" clip-rule="evenodd" />
    </svg>
    My Profile
</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6 text-center max-w-3xl mx-auto">
        @TempData["SuccessMessage"]
    </div>
}

<div class="bg-white shadow-lg rounded-2xl p-8 w-full mx-auto">
    <div class="flex flex-col md:flex-row items-center gap-8">
        <img src="@Model.AvatarUrl" alt="Avatar" class="w-32 h-32 rounded-full object-cover shadow-md border-4 border-gray-200" />

        <div class="flex-1">
            <h2 class="text-[14px] lg:text-[12px] font-bold text-gray-800 mb-2 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A4 4 0 016 16h12a4 4 0 01.879 1.804M12 14a4 4 0 100-8 4 4 0 000 8z" />
                </svg>
                @Model.Name
            </h2>

            <p class="text-gray-600  mb-1 flex items-center gap-2 text-[14px] lg:text-[12px]">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12h.01M12 12h.01M8 12h.01M21 12A9 9 0 113 12a9 9 0 0118 0z" />
                </svg>
                @Model.Email
            </p>

            <p class="text-gray-600  mb-1 flex items-center gap-2 text-[14px] lg:text-[12px]">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 3a1 1 0 00-.894.553l-3 6a1 1 0 00.02.947l3 6a1 1 0 001.748 0l3-6a1 1 0 00.02-.947l-3-6A1 1 0 0010 3z" />
                </svg>
                Role: <span class="font-medium">@Model.Role?.Name</span>
            </p>

            <p class="text-gray-600  flex items-center gap-2 text-[14px] lg:text-[12px]">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M4 4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm2 3h8v2H6V7zm0 4h5v2H6v-2z" />
                </svg>
                Position: <span class="font-medium">@Model.Position?.Name</span>
            </p>

            <div class="mt-6 flex gap-4 ">
                <a href="@Url.Action("EditProfile")"
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-1 rounded-lg shadow text-[14px] lg:text-[12px]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M11 17h2m-1-9v6m-7.5 4h12a2.5 2.5 0 002.5-2.5V6.5A2.5 2.5 0 0016.5 4h-9A2.5 2.5 0 005 6.5v10A2.5 2.5 0 007.5 19z" />
                    </svg>
                    Edit Data
                </a>
                <a href="@Url.Action("ChangePassword")"
                   class="inline-flex items-center gap-2 bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-1 rounded-lg shadow text-[14px] lg:text-[12px]">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 1110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2a3 3 0 00-6 0v2h6V7z" clip-rule="evenodd" />
                    </svg>
                    Ganti Password
                </a>
            </div>
        </div>
    </div>

    
</div>
