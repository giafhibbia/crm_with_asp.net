@model MyAuthDemo.Models.Lead
@{
    ViewBag.Title = "Lead Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="w-full mx-auto p-6">
<h1 class="text-3xl font-bold mb-6 text-[#009434]">Lead Details</h1>
  <!-- Back button di atas kiri -->
  <div class="mb-6">
    <a href="/Lead/Index" class="inline-flex items-center text-[#009434] hover:text-[#007e2a] font-semibold transition">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      Back to List
    </a>
  </div>

  <div class="bg-white shadow rounded border border-gray-200 p-6 space-y-6">
    <h3>@((Model.CompanyName) ?? "-")</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-4">

      <div>
        <label class="font-semibold text-gray-700">Group:</label>
        <div class="mt-1">@((Model.Group?.Name) ?? "No Group")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">City:</label>
        <div class="mt-1">@((Model.City) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">Address:</label>
        <div class="mt-1">@((Model.Address) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">Phone:</label>
        <div class="mt-1">@((Model.Phone) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">Email:</label>
        <div class="mt-1">@((Model.Email) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">Contract Number:</label>
        <div class="mt-1">@((Model.ContractNumber) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">Contract Status:</label>
        <div class="mt-1">@((Model.ContractStatus) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">PIC Name:</label>
        <div class="mt-1">@((Model.PICName) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">PIC Phone:</label>
        <div class="mt-1">@((Model.PICPhone) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">PIC Email:</label>
        <div class="mt-1">@((Model.PICEmail) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">Referral Name:</label>
        <div class="mt-1">@((Model.ReferralName) ?? "-")</div>
      </div>

      <div>
        <label class="font-semibold text-gray-700">Created By:</label>
        <div class="mt-1">@((Model.User?.Name) ?? "-")</div>
      </div>

    </div>
  </div>
</div>
