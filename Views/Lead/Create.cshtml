@model MyAuthDemo.Models.Lead
@{
    var isEdit = Model?.Id > 0;
    ViewBag.Title = isEdit ? "Edit Lead" : "Create Lead";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="w-full mx-auto px-4 py-8">
    <!-- Back Button (1 baris sendiri) -->
    <div class="mb-2">
        <a href="@Url.Action("Index", "Lead")" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800 transition">
            <div class="p-1.5 rounded-full bg-blue-100 hover:bg-blue-200 ">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-blue-600 pt-18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </div>
            <span class="ml-2 font-medium">Back</span>
        </a>
    </div>

    <!-- Judul di bawah tombol back -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">@ViewBag.Title</h1>
    </div>


    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="bg-white p-6 rounded-lg shadow space-y-6 border border-gray-300">
        @if (isEdit)
        {
            <input type="hidden" asp-for="Id" />
        }

        <!-- Group (Optional) -->
        <div>
            <label class="block text-sm font-medium text-gray-700">Group <span class="text-gray-400">(optional)</span></label>
            <select asp-for="GroupId" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                <option value="">-- No Group --</option>
                @foreach (var g in ViewBag.Groups)
                {
                    var selected = (Model?.GroupId == g.Id) ? "selected" : "";
                    @Html.Raw($"<option value=\"{g.Id}\" {selected}>{g.Name}</option>")
                }
            </select>
            <span asp-validation-for="GroupId" class="text-sm text-red-600"></span>
        </div>

        <!-- 2 Columns Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

            @* Province (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Province <span class="text-red-500">*</span></label>
                <select id="province-select" name="ProvinceId" class="select2 w-full"></select>
                <span asp-validation-for="ProvinceId" class="text-sm text-red-600"></span>
            </div>

            @* Regency (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Regency <span class="text-red-500">*</span></label>
                <select id="regency-select" name="RegencyId" class="select2 w-full"></select>
                <span asp-validation-for="RegencyId" class="text-sm text-red-600"></span>
            </div>


            @* Address (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Address <span class="text-red-500">*</span></label>
                <input asp-for="Address" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="Address" class="text-sm text-red-600"></span>
            </div>

            @* Phone (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Phone <span class="text-red-500">*</span></label>
                <input asp-for="Phone" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="Phone" class="text-sm text-red-600"></span>
            </div>

            @* Email (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Email <span class="text-red-500">*</span></label>
                <input asp-for="Email" type="email" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-sm text-red-600"></span>
            </div>

            @* Contract Number (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Contract Number <span class="text-red-500">*</span></label>
                <input asp-for="ContractNumber" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="ContractNumber" class="text-sm text-red-600"></span>
            </div>

            @* Contract Status (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Contract Status <span class="text-red-500">*</span></label>
                <input asp-for="ContractStatus" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="ContractStatus" class="text-sm text-red-600"></span>
            </div>

            @* PIC Name (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">PIC Name <span class="text-red-500">*</span></label>
                <input asp-for="PICName" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="PICName" class="text-sm text-red-600"></span>
            </div>

            @* PIC Phone (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">PIC Phone <span class="text-red-500">*</span></label>
                <input asp-for="PICPhone" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="PICPhone" class="text-sm text-red-600"></span>
            </div>

            @* PIC Email (Required) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">PIC Email <span class="text-red-500">*</span></label>
                <input asp-for="PICEmail" type="email" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="PICEmail" class="text-sm text-red-600"></span>
            </div>

            @* Referral Name (Optional) *@
            <div>
                <label class="block text-sm font-medium text-gray-700">Referral Name <span class="text-gray-400">(optional)</span></label>
                <input asp-for="ReferralName" class="mt-1 block w-full rounded-md border border-gray-400 shadow-sm focus:ring focus:ring-blue-500" />
                <span asp-validation-for="ReferralName" class="text-sm text-red-600"></span>
            </div>
        </div>

        <!-- Submit -->
        <div class="pt-6">
            <button type="submit" class="inline-flex items-center gap-2 px-6 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                @(isEdit ? "Update Lead" : "Create Lead")
            </button>
        </div>
    </form>

</div>
@section Scripts {
    <!-- 1. JQUERY (Paling atas) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- 2. VALIDATION (Butuh jQuery) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- 3. SELECT2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- 4. VALIDATION SCRIPTS PARTIAL -->
    <partial name="_ValidationScriptsPartial" />

    <!-- 5. CUSTOM JS -->
    <script>
        $(document).ready(function () {
            $('#province-select').select2({
                placeholder: 'Select Province',
                ajax: {
                    url: '/region/provinces',
                    dataType: 'json',
                    processResults: function (data) {
                        return { results: data };
                    }
                }
            });

            $('#regency-select').select2({
                placeholder: 'Select Regency',
                ajax: {
                    url: function () {
                        var provinceId = $('#province-select').val();
                        return `/region/regencies?provinceId=${provinceId}`;
                    },
                    dataType: 'json',
                    processResults: function (data) {
                        return { results: data };
                    }
                }
            });

            $('#province-select').on('change', function () {
                $('#regency-select').val(null).trigger('change');
            });
        });
    </script>
}
