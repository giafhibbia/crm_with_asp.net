@model MyAuthDemo.Models.Leads.Lead

@{
    ViewBag.Title = "Delete Lead";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-2xl mx-auto mt-8 p-6 bg-white border rounded shadow">
    <h1 class="text-2xl font-semibold text-red-600 mb-4">Are you sure you want to delete this Lead?</h1>

    <div class="mb-4">
        <p><strong>Company:</strong> @Model.CompanyName</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>PIC:</strong> @Model.PICName - @Model.PICPhone</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="flex gap-4 mt-6">
            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                Yes, Delete
            </button>
            <a asp-action="Index" class="px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400">
                Cancel
            </a>
        </div>
    </form>
</div>
